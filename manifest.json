{
  "manifest_version": 3,
  "name": "AutoMate - Assistant Achat Auto",
  "version": "1.0.0",
  "description": "Affiche les coûts d'entretien et d'assurance estimés sur les annonces automobiles.",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.lacentrale.fr/*",
        "*://*.leboncoin.fr/*",
        "*://*.autoscout24.fr/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "AutoMate Assistant"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}